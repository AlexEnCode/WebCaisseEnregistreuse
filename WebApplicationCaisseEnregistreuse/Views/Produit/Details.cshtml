@model Produit
@{
    Layout = null;
}
@{
    ViewData["Title"] = "En savoir plus";
    Produit produit = Model;
}
<body>
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background-color: #f8f9fa;
        }

        .card {
            max-width: 20rem;
            width: 100%;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            background-color: #ffffff; 
            border-radius: 15px;
            overflow: hidden;
        }

        .card-img-top {
            width: 100%;
            height: 250px;
            object-fit: cover; 
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

        .card-body {
            padding: 20px;
            text-align: center;
        }



        .card-link {
            color: #007B5E; 
            text-decoration: none;
            font-weight: bold;
            display: inline-block;
            margin-top: 15px;
            padding: 10px 20px;
            border: 1px solid #007B5E; 
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .card-link:hover {
                background-color: #007B5E; 
                color: #fff; 
            }

        ul {
            list-style-type: none;
        }
    </style>

    @if (produit != null)
    {
        <div class="card">
            <img src="" class="card-img-top" alt=" Image">
            <div class="card-body">
                <h7 class="card-title" style="font-size: 25px;">@produit.Nom</h7>
            </div>
            <ul style="line-height: 1.5;">
                <li class="list-group-item ">@produit.QuantiteStock en entrepôt</li>
                <li class="list-group-item">@produit.Prix €</li>
                <li class="list-group-item"> @produit.Description </li>
                <li class="list-group-item"> @produit.Categorie </li>
            </ul>
            <div class="card-body">
                <a asp-action="Index" class="card-link">Retour à la liste</a>
            </div>
        </div>
    }

</body>
